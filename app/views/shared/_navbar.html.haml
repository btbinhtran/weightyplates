.navbar.navbar-inverse.navbar-fixed-top.top-nav
  .navbar-inner
    %a{class: "btn btn-navbar", :data => {'toggle' => 'collapse', 'target' => '.nav-collapse'}}
      %span{class: "icon-bar"}
      %span{class: "icon-bar"}
      %span{class: "icon-bar"}
    %div{id: "left-area-navbar"}
      %img{alt: "main_logo_hover", class: "logo_image", id: "main_logo_hover", src: "/assets/icons/global/weightyplatesHoverLogo.png"}
      %img{alt: "main_logo", class: "logo_image", id: "main_logo", src: "/assets/icons/global/weightyplatesLogo.png"}
      %a.brand(href="/") Weighty Plates
    %nav{class: "nav-collapse"}
      %ul.nav.mainpage-list
        - if user_signed_in?
          %li= link_to 'Logout', destroy_user_session_path, :method=>'delete'
          %li= link_to 'Settings', edit_user_registration_path
        - else
          %li#login-link= link_to 'Login', new_user_session_path
          %li#signout-link= link_to 'Sign up', new_user_registration_path