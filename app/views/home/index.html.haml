.row-fluid
  .span6
    .container-fluid.exclaim-signup
      %h1 Welcome to Weighty Plates
      %br/
      %h2 Weighty Plates helps you keep better track of your workout routines by offering features that matters.
      %br/
      %a{href: "#"}
        %h3 I want to try out Weighty Plates
      %br/
      %a{href: "#"}
        %button.btn Sign me up already!
  .span6
    .mainpage-box.row-fluid
      %h2 Login for returning users
      = form_for(resource, :as => resource_name, :html => {:class => ''}, :url => session_path(resource_name)) do |f|
        .row-fluid.mainpage-inputrow
          = f.label :email
          = f.email_field :email, class: 'mainpage-form-field'
        .row-fluid.mainpage-inputrow
          = f.label :password
          = f.password_field :password, class: 'mainpage-form-field'
        .row-fluid.mainpage-inputrow
          - if devise_mapping.rememberable?
            %label(for="user_remember_me")
            = f.check_box :remember_me
            Remember me
        .row-fluid.mainpage-inputrow.mainpage-lastrow
          = link_to "Forgot password?", new_user_password_path
          = f.submit "Sign in", :class => 'btn-large mainpage-sign-in-button'



