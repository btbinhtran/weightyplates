!!! 5
%html
  %head
    = yield :head
    = render 'shared/header_tags'
    = @home_page ? (stylesheet_link_tag "home/home") : ''
    %title Weighty Plates
    %style(id="stylesTest" type="text/css")
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = render 'shared/navbar'
    .container-fluid.fix-after1280.mainbody-container
      .hero-unit
        - flash.each do |name, msg|
          = content_tag :div, ((content_tag :div, "", :class => msg) + (content_tag :p, msg)) , :id => "flash_#{name}", :class => "row-fluid"
        = yield