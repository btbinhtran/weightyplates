!!! 5
%html
  %head
    = render 'shared/header_tags'
    = @home_page ? (stylesheet_link_tag "home/home") : ''
    = javascript_include_tag "common"
    = csrf_meta_tags
  %body
    = render 'shared/navbar'
    .container-fluid.fix-after1280.mainbody-container
      - flash.each do |name, msg|

        = content_tag :div, ((content_tag :div, "", :class => msg) + (content_tag :p, msg) + (content_tag :div, "", :id => "close-button")  ) , :id => "flash_#{name}", :class => "row-fluid"
      = yield